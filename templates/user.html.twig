{% block links %}
	<link href="{{asset('css/user.css')}}" rel="stylesheet">
{% endblock %}
{% block body %}
	<body>
		<div class="container">
			<div class="main-body">
				<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 gutters-sm">
					{% for figure in user|slice(0, 4) %}
						<div class="col mb-3">
							<div class="card">
								<img src="{{asset('images/340x120.jpg')}}" style="  background-size: 150px;
									  width: 300px;
									  height: 120px;
									  width=" 600px" alt=" Cover" class=" card-img-top">
								<div class="card-body text-center">
									<img src="{{ vich_uploader_asset(figure,'imageFile')}}" style="width:100px;margin-top:-65px" alt="User" class="img-fluid img-thumbnail rounded-circle border-0 mb-3">
									<h5 class="card-title">{{figure.name}}
										{{figure.lastname}}</h5>
									<p class="text-secondary mb-1">{{figure.activity}}</p>
									<p class="text-muted font-size-sm">{{figure.address}},
										{{figure.region}}</p>
								</div>
								<div class="card-footer">
									<button class="btn btn-light btn-sm bg-white has-icon btn-block" type="button">
										<a href="{{ path('app_profile', {'id': figure.id}) }}" style="text-decoration:none;">
											<i class="material-icons"></i>Profile</button>
									</a>
									<button class="btn btn-light btn-sm bg-white has-icon ml-2" type="button">
										<a href="/send">
											<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-message-circle">
												<path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
											</svg>
										</a>
									</button>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
		<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
	</body>
{% endblock %}
