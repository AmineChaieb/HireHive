{% extends 'base.html.twig' %}

{% block title %}Messagerie
{% endblock %}

{% block body %}
<div style="background-color: #0093E9;
            background-image: linear-gradient(180deg, #39C7FF 0%, #0093E9 100%);">	
	<section class="container">
		<a class="btn btn-primary mt-5" style="margin-left:500px;" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">Voir mes dossier</a>
	<div class="offcanvas offcanvas-start" tabindex="-1000" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">

		<div class="offcanvas-header">
			<h2 class="offcanvas-title" id="offcanvasExampleLabel">Mes messages</h2>
			<button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
		</div>
		<div class="offcanvas-body">
			<div class="list-group">
				<a href="{{ path("app_messages") }}" class="list-group-item list-group-item-action">Accueil</a>
			</div>

			<div class="list-group">
				<a href="{{ path("app_messages") }}" class="list-group-item list-group-item-action">Boite de reception</a>
			</div>

			<div class="list-group">
				<a href="{{ path("app_messages") }}" class="list-group-item list-group-item-action">Messages Envoy√©s</a>
			</div>
		</div>
	</div>	
		<div class="row">
			<div class="col">
				<div class="card mt-5 mb-5">
					<div class="card-header bg-info text-white">
						<h4>
							<span class="glyphicon glyphicon-envelope"></span>
							Compose Message</h4>
					</div>
					<div class="card-body">
						{{ form_start(form) }}
						<div class="form-group">
							<label for="inputTo">
								<span class="glyphicon glyphicon-user"></span>
							</label>
							{{ form_row(form.recipient, {
                            label: 'Vers'
                            }) }}
						</div>
						<div class="form-group">
							<label for="inputSubject">
								<span class="glyphicon glyphicon-list-alt"></span>
							</label>
							{{ form_row(form.title, {
                            label: 'Titre'
                            }) }}
						</div>
						<div class="form-group">
							<label for="inputBody">
								<span class="glyphicon glyphicon-list"></span>
							</label>
							{{ form_row(form.message, {
                            'label': 'Message',
                            'attr': {
                            'rows': 6,
                            'class': 'form-control'},
                            }) }}
						</div>
						{{ form_end(form) }}
					</div>
					<div class="card-footer">
						<button type="button" class="btn btn-primary">
							<i class="fa fa-arrow-circle-right fa-lg"></i>
							Send</button>
					</div>
				</div>

				<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>


			</div>
		</div>
</section>
</div>
{% endblock %}
